    </div>

    <script>
        const noBtn = document.getElementById('noBtn');
        const yesBtn = document.getElementById('yesBtn');
        const mainContainer = document.getElementById('main-container');
        const successMessage = document.getElementById('success-message');
        const body = document.querySelector('body');

        let hasMoved = false;

        function moveButton() {
            // Get window dimensions (accounting for padding/margins)
            const maxWidth = window.innerWidth - noBtn.offsetWidth - 40;
            const maxHeight = window.innerHeight - noBtn.offsetHeight - 40;

            // Calculate random positions, ensuring it doesn't go off-screen
            // Using Math.max(20, ...) ensures it doesn't get stuck right at the top/left edge
            const randomX = Math.max(20, Math.random() * maxWidth);
            const randomY = Math.max(20, Math.random() * maxHeight);

            // Apply new position. We change position to 'fixed' so it can move anywhere on screen easily relative to the viewport
            noBtn.style.position = 'fixed'; 
            noBtn.style.left = randomX + 'px';
            noBtn.style.top = randomY + 'px';
            
            // Add a funny rotation effect when it moves
            const randomRotate = (Math.random() - 0.5) * 40; // range -20 to +20 degrees
            noBtn.style.transform = `rotate(${randomRotate}deg)`;

            hasMoved = true;
        }

        function acceptLove() {
            mainContainer.style.display = 'none';
            successMessage.style.display = 'block';
            
            // Change background color slightly on success for effect
            body.style.backgroundColor = "#e1bee7";
            // Hide the No button forever
            noBtn.style.display = 'none';
        }

        // Mobile support: run away on touch as well
        noBtn.addEventListener('touchstart', (e) => {
            e.preventDefault();
            moveButton();
        });
    </script>
</body>
